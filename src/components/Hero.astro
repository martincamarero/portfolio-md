---
const personalImageAlt = "Martín Camarero Benavente"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
  class="rounded-full shadow-lg w-40 h-40 object-cover"
  src="/fotoCurriculumFondoBlanco-modified.png"
  alt={personalImageAlt}
/>
    <a
      href="https://www.linkedin.com/in/mart%C3%ADn-camarero-benavente-7323b2222/ "
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Martín!
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Estudiante de Grado Superior en Desarrollo de Aplicaciones Multiplataforma. <strong
      >Full Stack Developer y desarrollador de Automatizaciones</strong
    > en Toledo, España. Especializado en el desarrollo de aplicaciones web
    únicas.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:martincb002@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/mart%C3%ADn-camarero-benavente-7323b2222/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
